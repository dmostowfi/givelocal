<%= search_form_for @q, :class => collapse_search_form, :id => "gifts_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :gift_name_cont, "Gift name contains" %>
    <%= f.text_field :gift_name_cont, :class => "form-control", :placeholder => "Gift name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='descriptiongteqPicker' data-target-input="nearest">
          <%= f.text_field :description_gteq, :class => "form-control datetimepicker-input", :placeholder => "Description greater than or equal to", :data => {:target => '#descriptiongteqPicker'} %>
          <div class="input-group-append" data-target='#descriptiongteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
          </div>
          <script type="text/javascript">
            $(function () {
                $('#descriptiongteqPicker').datetimepicker({
                  format: 'LT'
                });
            });
          </script>
        </div>
      </div>
      <div class='col-md-6'>
        <div class='input-group date' id='descriptionlteqPicker' data-target-input="nearest">
          <%= f.text_field :description_lteq, :class => "form-control datetimepicker-input", :placeholder => "Description less than or equal to", :data => {:target => '#descriptionlteqPicker'} %>
          <div class="input-group-append" data-target='#descriptionlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
          </div>
          <script type="text/javascript">
            $(function () {
                $('#descriptionlteqPicker').datetimepicker({
                  format: 'LT'
                });
            });
          </script>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :store_store_name_cont, "Store store_name contains" %>
    <%= f.text_field :store_store_name_cont, :class => "form-control", :placeholder => "Store store_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :category_category_cont, "Category category contains" %>
    <%= f.text_field :category_category_cont, :class => "form-control", :placeholder => "Category category contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "User Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='interested_friendsgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :interested_friends_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "User Created at greater than or equal to", :data => {:target => '#interested_friendsgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#interested_friendsgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='interested_friendslteqcreated_atPicker' data-target-input="nearest">
