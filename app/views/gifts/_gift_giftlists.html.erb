<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Giftlists

    <a data-toggle="collapse" href="#gift_giftlists_new_form">
      Add giftlist
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @gift.giftlists.each do |giftlist| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to giftlist, giftlist %>

        <%= link_to giftlist, method: :delete, data: { confirm: "Do you really want to delete this giftlist" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="gift_giftlists_new_form">
        <%= render partial: "gifts/gift_giftlists_new_form" %>
      </div>
    </div>

  </ul>
</div>
