          });
          $('#interested_friendsgteqcreated_atPicker').on("dp.change", function (e) {
              $('#interested_friendslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#interested_friendslteqcreated_atPicker').on("dp.change", function (e) {
              $('#interested_friendsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "User Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='wishersgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :wishers_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "User Created at greater than or equal to", :data => {:target => '#wishersgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#wishersgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='wisherslteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :wishers_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "User Created at less than or equal to", :data => {:target => '#wisherslteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#wisherslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#wishersgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#wisherslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#wishersgteqcreated_atPicker').on("dp.change", function (e) {
              $('#wisherslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#wisherslteqcreated_atPicker').on("dp.change", function (e) {
              $('#wishersgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/gifts" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

