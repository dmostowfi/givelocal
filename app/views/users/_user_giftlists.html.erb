<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Giftlists

    <a data-toggle="collapse" href="#user_giftlists_new_form">
      Add giftlist
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.giftlists.each do |giftlist| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to giftlist, giftlist %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_giftlists_new_form">
        <%= render partial: "users/user_giftlists_new_form" %>
      </div>
    </div>

  </ul>
</div>
