<div class="card mb-3">
  <h2 class="card-header h4">
    Giftlist #<%= giftlist.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @giftlist.user.present? %>
          <%= link_to giftlist.user, giftlist.user %>
        <% end %>
      </dd>

      <dt>Friend name</dt>
      <dd><%= giftlist.friend_name %></dd>

      <dt>Gift</dt>
      <dd>
        <% if @giftlist.gift.present? %>
          <%= link_to giftlist.gift, giftlist.gift %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back giftlist, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_giftlist_url(giftlist), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to giftlist, method: :delete, data: { confirm: "Do you really want to delete this giftlist?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(giftlist.updated_at) %> ago
  </div>
</div>
