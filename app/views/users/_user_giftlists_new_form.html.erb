<%= form_with(model: @giftlist, local: true) do |f| %>

  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :friend_name %>

    <%= f.text_field :friend_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :gift_id %>

    <%= f.collection_select :gift_id, Gift.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create giftlist", class: "btn btn-block btn-outline-secondary" %>
<% end %>
