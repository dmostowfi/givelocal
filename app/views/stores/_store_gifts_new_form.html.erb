<%= form_with(model: @gift, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :gift_name %>

    <%= f.text_field :gift_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :photo %>

    <%= f.file_field :photo, class: "form-control" %>
  </div>

  <%= f.hidden_field :store_id, value: @store.id %>

  <div class="form-group">
    <%= f.label :category_id %>

    <%= f.collection_select :category_id, Category.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>

    <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :website %>

    <%= f.text_field :website, class: "form-control" %>
  </div>

  <%= f.submit "Create gift", class: "btn btn-block btn-outline-secondary" %>
<% end %>
