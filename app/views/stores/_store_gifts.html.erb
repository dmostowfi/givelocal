<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Gifts

    <a data-toggle="collapse" href="#store_gifts_new_form">
      Add gift
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @store.gifts.each do |gift| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to gift, gift %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="store_gifts_new_form">
        <%= render partial: "stores/store_gifts_new_form" %>
      </div>
    </div>

  </ul>
</div>
