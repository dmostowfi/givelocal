<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Gifts

    <a data-toggle="collapse" href="#category_gifts_new_form">
      Add gift
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @category.gifts.each do |gift| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to gift, gift %>

        <%= link_to gift, method: :delete, data: { confirm: "Do you really want to delete this gift" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="category_gifts_new_form">
        <%= render partial: "categories/category_gifts_new_form" %>
      </div>
    </div>

  </ul>
</div>
